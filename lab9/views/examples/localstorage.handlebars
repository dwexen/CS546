<table class="table" id="localstorage-data">
    <thead>
    <tr>
        <th>key</th>
        <th>Value</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<table class="table" id="localstorage-stats">
    <thead>
    <tr>
        <th>Intervals since last page load</th>
        <th>Form Submissions</th>
        <th>Last Value Submitted</th>
        <th>Location Hash</th>
    </tr>
    </thead>
    <tr>
        <td class="loaded"></td>
        <td class="submitted"></td>
        <td class="lastval"></td>
        <td class="hash"></td>
    </tr>
<form class="form form-horizontal" id="localstorage-form">
    <div class="form-group">
        <label for="localstorage-value" class="col-sm-2 control-label">Value</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="localstorage-value" placeholder="value">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Add Data</button>
            <button type="button" class="btn btn-default" id="clear-storage">Clear LocalStorage</button>
        </div>
    </div>
</form>
<div class="alert alert-danger hidden" id="form-alert">
</div>